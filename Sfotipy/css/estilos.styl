@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181

body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
//buttons
.button-menu
	position absolute
	top 50%
//oocss classes	
.container
	padding 1.4rem	
	font-size 0
	text-aling center
.border-bottom
	border-bottom 1px solid gris_claro
.name 
	color gris_oscuro
.menu
	display none
.relative
	position relative
.author
	color gris_claro
.header
	height 3.5em
	.title
		font-size 1.1em
		text-aling center
		margin 0
		line-height 3.5em
		text-aling center		
.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8rem
	&:nth-child(even)
		margin-right 0